{% extends 'base.html.twig' %}

{% block title %}Add Job{% endblock %}

{% block body %}
    {% include 'partials/userNavbar.html.twig' %}
    <div id="job">
        <div class="ui segment">
            <div class="ui form">
                <h1 id="hd">Add job</h1>
                {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
                {% for field in form.children %}
                    {% if field.vars.name != '_token' %}
                        <div class="field">
                            <label>{{ form_label(field) }}</label>
                            {{ form_widget(field) }}
                            {{ form_errors(field) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <button class="ui primary button add" id="btnAdd" type="submit">Add</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% include 'partials/footer.html.twig' %}
{% endblock %}
