<div id="search">
    <h1 id="hd">List of jobs</h1>
    <div class="ui category search">
        <div class="ui icon input">
            <input class="search" id="search-box" type="text" name="search" placeholder="Search jobs..." size="70">
            <i class="search icon"></i>
        </div>
    </div>
</div>

<div class="list">
    <div class="ui link cards">
        {% if job == true %}
            {% for data in job %}
                <div class="ui card">
                    <div class="image">
                        <img src="{{ asset('images/' ~ data.image) }}">
                    </div>
                    <div class="content">
                        <p class="header">{{ data.title }}</p>
                        <div class="extra content">
                            <button class="ui blue button"><a class="btn" id="show" href="{{ path('login') }}"
                                                              target="_blank">Show More</a></button>
                        </div>

                    </div>
                </div>
            {% endfor %}
        {% else %}
            <h1 id="notFound">No Job Found ðŸ˜´</h1>
        {% endif %}

    </div>
</div>